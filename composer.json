{
    "name": "portalium/portalium-kickstarter",
    "description": "Portalium Project Kickstarter",
    "homepage": "http://www.portalium.dev/",
    "type": "portalium-kickstarter",
    "license": "MIT",
    "authors": [
        {
            "name": "UÄŸur YILDIZ",
            "email": "yildiz@diginova.com.tr",
            "homepage": "https://uguryildiz.net"
        }
    ],
    "support": {
        "issues": "https://github.com/portalium/portalium-kickstarter/issues"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "portalium/portalium-composer": "*",
        "portalium/portalium-core": "*",
        "portalium/portalium-site": "*",
        "portalium/portalium-user": "*",
        "portalium/portalium-theme": "*",
	    "portalium/portalium-menu": "*",
        "portalium/portalium-content": "*",
        "portalium/portalium-storage": "*"
    },
    "require-dev": {
        "yiisoft/yii2-gii": "^2.0",
        "yiisoft/yii2-debug": "~2.0.0"
    },
    "scripts": {
		"post-update-cmd": [
			"php migration"
		]
	},
    "config": {
        "fxp-asset": {
            "installer-paths": "vendor/bower"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "portalium/portalium-composer": true
        }
    }
}
